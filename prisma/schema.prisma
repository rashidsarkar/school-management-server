generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  role          Role
  isDeleted     Boolean  @default(false)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@map("users")
}

model Student {
  id         String   @id @default(uuid())
  name       String
  age        Int
  class_id   String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("students")
}

model Class {
  id         String   @id @default(uuid())
  name       String
  section    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("classes")
}
